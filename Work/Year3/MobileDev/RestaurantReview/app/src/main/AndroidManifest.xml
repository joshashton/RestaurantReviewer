<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantReview">
        <activity
            android:name=".ReviewPage"
            android:exported="true" />
        <activity
            android:name=".Review"
            android:exported="true" />
        <activity
            android:name=".RestaurantPage"
            android:exported="true" />
        <activity
            android:name=".SignUp"
            android:exported="true"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.RestaurantReview.NoActionBar" />
        <activity
            android:name=".ui.login.SignUp"
            android:exported="true"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:label="@string/title_activity_login_page"
            android:theme="@style/Theme.RestaurantReview.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>